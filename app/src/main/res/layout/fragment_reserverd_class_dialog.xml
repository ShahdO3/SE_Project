<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:backgroundTint="#00000000"
    android:backgroundTintMode="src_over">

    <TextView
        android:id="@+id/in_how_long_TV"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/estedad_semibold"
        android:text="IN 3 DAYS"
        android:textColor="#601212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/with_who_date_TV"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/estedad_medium"
        android:lines="3"
        android:maxLines="3"
        android:text="Korean with Madeline, May 8th "
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_how_long_TV" />


    <TextView
        android:id="@+id/time_duration_TV"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/estedad_medium"
        android:text="11:00 AM, 1 hour"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/with_who_date_TV" />

    <TextView
        android:id="@+id/click_tv"
        android:layout_width="127dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/estedad_medium"
        android:text="@string/click_to_open_link"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/zoom_link_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_duration_TV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/zoom_link_TV"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/estedad_medium"
        android:lines="1"
        android:text="https://www.zoom.us/"
        android:textColor="#3F51B5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_duration_TV" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reg_tutor_img"
        android:layout_width="140dp"
        android:layout_height="146dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/byron_bay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/with_who_date_TV"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>